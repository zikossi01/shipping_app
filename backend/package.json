{
  "name": "transportconnect-backend",
  "version": "1.0.0",
  "description": "Backend API for TransportConnect - Multi-role logistics platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest --ci --coverage --no-cache",
    "seed": "node src/utils/seeder.js",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t transportconnect-backend .",
    "docker:run": "docker run -p 5000:5000 transportconnect-backend",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "logistics",
    "transport",
    "freight",
    "shipping",
    "drivers",
    "cargo",
    "express",
    "mongodb",
    "nodejs",
    "socketio"
  ],
  "author": "TransportConnect Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/transportconnect/backend.git"
  },
  "bugs": {
    "url": "https://github.com/transportconnect/backend/issues"
  },
  "homepage": "https://transportconnect.fr"
}
